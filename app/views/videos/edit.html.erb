
<h2>Edit a clip from your library</h2>
<div class="new_video" >
  <img src="/vhs_tape.png" />
  <form action='<%= video_update_path %>' method='post'>
    <table>
      <tr>
        <td>Title</td>
        <td><input type='text' name='video[title]' value="<%= @video.title %>" autofocus></td>
      </tr>
      <tr>
        <td>Description</td>
        <td><textarea rows=3  cols=20  name='video[description]' ><%= @video.description %></textarea></td>
      </tr>
      <tr>
        <td>You tube id</td>
        <td><input type='text' name='video[url]' value="<%= @video.url %>"></td>
      </tr>
      <tr>
        <td>Genre</td>
        <td><input type='text' name='video[genre]' value="<%= @video.genre %>"></td>
      </tr>
      <tr>
        <td></td>
        <td><button>S U B M I T</button></td>
      </tr>
    </table>
  </form>
</div>


